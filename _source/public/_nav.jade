

aside.nav

  section.about
    img(src="/images/me-beard.jpg" loading="lazy" alt="picture of David Morrow" )

    nav
      ul.pages
        li
          a(class=current.source == 'index' ? 'active' : '' href="/") Root
        li
          a(class=current.source == 'about' ? 'active' : '' href="/about") About
        li
          a(href="/morrow_resume.pdf", download="Morrow-Resume.pdf") Resume

  nav
    ul
      for article in public.posts._data
        li
          a(href="/posts/#{ article.slug }" class=current.source === article.slug ? 'active' : '')
            = article.title

