doctype
html(lang="en")
  head
    title= title
    
    meta(name="description" content="#{ intro }")  
    meta(name="viewport" content="width=device-width, user-scalable=no")
    
    link(rel="stylesheet" href="//fonts.googleapis.com/css?family=Merriweather:400,700")
    link(rel="stylesheet" href="/styles/app.css")  
    
    script(async src="https://www.googletagmanager.com/gtag/js?id=UA-12244949-1")
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-12244949-1');

  body
    
    .container
      .content
        .main
          
          
          .lead
            .date
              if (isNaN(new Date(date)))
                = date
              else
                = months[new Date(date).getMonth()]
                | &nbsp;
                = new Date(date).getFullYear()
                a.hamburger(href="#")

            h1= title
            h2
              = intro
              | &nbsp;
              if github
                a.github(href=github, target='_blank', title="GitHub") View on GitHub
              
          if hero
            .gallery
              .item.hero
                img(src=hero.img)
                if hero.caption
                  .caption= hero.caption
        
          .blog-content
            != yield
          
      != partial("../_nav")
    
    script(src="/scripts/app.js")
    script(src="//cdn.jsdelivr.net/combine/npm/prismjs@1.8.3,npm/prismjs@1.8.3/components/prism-javascript.min.js,npm/prismjs@1.8.3/components/prism-less.min.js,npm/prismjs@1.8.3/components/prism-ruby.min.js")
